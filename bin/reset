#!/bin/bash

DIRNAME=$(cd `dirname $0` && pwd)

read -r -p "Resetting Database: also delete build files? [y/N]" response
if [[ $response =~ ^([yY][eE][sS]|[yY])$ ]]
then
  meteor reset "$@"
  rm .meteor/versions 2> /dev/null
  find . -name bower -exec rm -rf {} \;
  find . -name node_modules -exec rm -rf {} \;
else
  meteor reset "$@"
fi
